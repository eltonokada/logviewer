<script type="text/javascript" src="jquery-1.4.2.min.js"></script>

<style>
	.terminal{background:#000;color:green;width:500px;height:300px;}
</style>
<textarea class="terminal" id="terminal">
	

</textarea>

<script>
$("#terminal").scrollTop(200);
var t = setInterval( function() {
	$("#terminal").scrollTop(10000); 
		$.ajax(
				{ 
					url: "http://localhost:4567/log", 
					context: document.body, 
					success: function(data){ $("#terminal").html(data);}

				}
		);
		},3000);		
</script>